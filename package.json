{
  "name": "tedis",
  "version": "0.1.12",
  "main": "build/main.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "doc:dev": "vuepress dev doc",
    "pkg:build": "tsc -b src/tsconfig.app.json",
    "pkg:test": "jest",
    "upload:doc": "chmod +x ./script/doc.sh && ./script/doc.sh",
    "upload:npm": "chmod +x ./script/npm.sh && ./script/npm.sh",
    "precommit": "lint-staged",
    "pkg:pack": "pika build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cBiscuitSurprise/tedis.git"
  },
  "description": "redis client for node.js with typescript and async",
  "keywords": [
    "tedis",
    "redis",
    "typescript",
    "async",
    "await",
    "promise"
  ],
  "authors": [
    {
      "name": "dasoncheng",
      "email": "dasoncheng@foxmail.com"
    },
    {
      "name": "cBiscuitSurprise",
      "email": ""
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cBiscuitSurprise/tedis/issues"
  },
  "homepage": "https://github.com/cBiscuitSurprise/tedis#readme",
  "dependencies": {
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/uuid": "^3.4.4",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "husky": "^2.5.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2",
    "vuepress": "^1.0.2"
  },
  "directories": {
    "doc": "doc",
    "example": "example"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.ts": [
        "tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "*.min.js"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "src/tsconfig.app.json"
        }
      ],
      [
        "@pika/plugin-build-node",
        {}
      ]
    ]
  }
}
